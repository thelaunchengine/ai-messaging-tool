{
  "family": "production-ai-messaging-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::957440525184:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::957440525184:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "backend",
            "image": "957440525184.dkr.ecr.us-east-1.amazonaws.com/production-ai-messaging-backend:latest",
      "portMappings": [
        {
          "containerPort": 8001,
          "hostPort": 8001,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "8001"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:AiMessaging2024Secure@production-ai-messaging-db.cmpkwkuqu30h.us-east-1.rds.amazonaws.com:5432/ai_messaging"
        },
        {
          "name": "S3_BUCKET_NAME",
          "value": "ai-messaging-tool-production-uploads"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://production-ai-messaging-redis.gmhyra.ng.0001.use1.cache.amazonaws.com:6379/0"
        },
        {
          "name": "TIMEOUT_PER_WEBSITE",
          "value": "300"
        },
        {
          "name": "TIMEOUT_PER_BATCH",
          "value": "900"
        },
        {
          "name": "TIMEOUT_PER_CHUNK",
          "value": "600"
        },
        {
          "name": "QUEUE_TIMEOUT",
          "value": "300"
        },
        {
          "name": "DB_POOL_TIMEOUT",
          "value": "30"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/production-ai-messaging-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "backend"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8001/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 5,
        "startPeriod": 120
      }
    }
  ]
}
