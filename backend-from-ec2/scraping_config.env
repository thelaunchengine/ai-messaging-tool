# OPTIMIZED SCRAPING CONFIGURATION
# This file contains the optimized configuration for the scraping system

# Batch Processing
MAX_BATCH_SIZE=15  # Reduced from 44 to 15
MAX_CONCURRENT_WEBSITES=10  # Process 10 websites simultaneously

# Timeouts
TIMEOUT_PER_WEBSITE=300  # 5 minutes max per website
TIMEOUT_PER_BATCH=900  # 15 minutes max per batch
TIMEOUT_PER_CHUNK=600  # 10 minutes max per chunk

# Resource Limits
MAX_CPU_USAGE=80.0  # Max 80% CPU usage
MAX_MEMORY_USAGE=85.0  # Max 85% memory usage
MAX_DB_CONNECTIONS=20  # Max database connections

# Monitoring
RESOURCE_CHECK_INTERVAL=30  # Check resources every 30 seconds
PROGRESS_UPDATE_INTERVAL=10  # Update progress every 10 seconds

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=60  # 1 minute
EXPONENTIAL_BACKOFF=true

# Queue Management
MAX_QUEUE_SIZE=100
QUEUE_TIMEOUT=300  # 5 minutes

# Database
BATCH_INSERT_SIZE=50
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
